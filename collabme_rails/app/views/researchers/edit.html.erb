<h1>Edit User</h1>
<%= render 'shared/show_errors' %>

<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active">
      <a href="#tab1" data-toggle="tab">Personal Information</a>
    </li>
    <li>
      <a href="#tab2" data-toggle="tab">Education</a>
    </li>
    <li>
      <a href="#tab3" data-toggle="tab">Work Experience</a>
    </li>
    <li>
      <a href="#tab4" data-toggle="tab">Publications</a>
    </li>
    <li>
      <a href="#tab5" data-toggle="tab">Skills and Interests</a>
    </li>
  </ul>

  <div class="tab-content">
    <!-- Personal Profile -->
    <div class="tab-pane active" id="tab1">
      <%= form_for @researcher, :html => { :class => 'form-horizontal' } do |f| %>
        <div class="control-group">
          <label class="control-label" for="first_name">First Name</label>
          <div class="controls">
            <%= f.text_field :first_name %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="last_name">Last Name</label>
          <div class="controls">
            <%= f.text_field :last_name %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="email">Email Address</label>
          <div class="controls">
            <%= f.text_field :email %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="about_me">About Me</label>
          <div class="controls">
            <%= f.text_area :about_me, :placeholder => @researcher.about_me, :rows => 2 %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= f.submit 'Update Profile', :class => 'btn btn-primary' %>
          </div>
        </div>        
      <% end %>
    </div>

    <!-- Education -->
    <div class="tab-pane" id="tab2">
      <%= form_tag({:controller => 'educations', :action => 'add_education'}, {:method => 'post', :class => 'form-horizontal'}) do %>
        <div class="control-group">
          <label class="control-label" for="school_name">College / University</label>
          <div class="controls">
            <%= text_field_tag :school_name %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="degree">Degree</label>
          <div class="controls">
            <%= text_field_tag :degree %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="major">Major</label>
          <div class="controls">
            <%= text_field_tag :major %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="specialization">Specialization</label>
          <div class="controls">
            <%= text_field_tag :specialization %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">Start Date</label>
          <div class="controls">
            <select class="input-medium" id="start_date_month">
              <%= render 'shared/select_months' %>
            </select>
            <select class="input-small" id="start_date_year">
              <%= render 'shared/select_years' %>
            </select>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">End Date</label>
          <div class="controls">
            <select class="input-medium" id="end_date_month">
              <%= render 'shared/select_months' %>
            </select>
            <select class="input-small" id="end_date_year">
              <%= render 'shared/select_years' %>
            </select>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= submit_tag 'Add New Education', :class => 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Work Experience -->
    <div class="tab-pane" id="tab3">
      <%= form_tag({:controller => 'educations', :action => 'add_education'}, {:method => 'post', :class => 'form-horizontal'}) do %>
        <div class="control-group">
          <label class="control-label" for="school_name">College / University</label>
          <div class="controls">
            <%= text_field_tag :school_name %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="degree">Degree</label>
          <div class="controls">
            <%= text_field_tag :degree %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="major">Major</label>
          <div class="controls">
            <%= text_field_tag :major %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="specialization">Specialization</label>
          <div class="controls">
            <%= text_field_tag :specialization %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">Start Date</label>
          <div class="controls">
            <select class="input-medium" id="start_date_month">
              <%= render 'shared/select_months' %>
            </select>
            <select class="input-small" id="start_date_year">
              <%= render 'shared/select_years' %>
            </select>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">End Date</label>
          <div class="controls">
            <select class="input-medium" id="end_date_month">
              <%= render 'shared/select_months' %>
            </select>
            <select class="input-small" id="end_date_year">
              <%= render 'shared/select_years' %>
            </select>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= submit_tag 'Add New Education', :class => 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>


    <div class="tab-pane" id="tab4">
      <p>Nothing here yet.</p>
    </div>
    <div class="tab-pane" id="tab5">
      <%= form_tag({:controller => "researchers", :action => "addInterest"}, :method => "get") do %>
        <%= text_field_tag(:tag) %>
        <%= hidden_field_tag :id, @researcher.id %>
        <%= submit_tag "Add Interest", :class => "btn btn-success" %>
      <% end %>

      <%= form_tag({:controller => "researchers", :action => "addSkill"}, :method => "get") do %>
        <%= text_field_tag(:tag) %>
        <%= hidden_field_tag :id, @researcher.id %>
        <%= submit_tag "Add Skill", :class => "btn btn-success"%>
      <% end %>
    </div>
  </div>
</div>