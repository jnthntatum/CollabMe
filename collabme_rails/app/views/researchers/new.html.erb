<h1>Create New User</h1>
<% if @researcher.errors %>
  <% @researcher.errors.full_messages.each do |message| %>
    <p class="error"><%= message %>.</p>
  <% end %>
<% end %>
<%= form_for @researcher do |f| %>
  <p>
    First Name: <%= f.text_field :first_name %> <br />
    Last Name: <%= f.text_field :last_name %> <br />
    Email Address: <%= f.text_field :email %> <br />
    Password: <%= f.password_field :password %> <br />
    Confirm Password: <%= f.password_field :password_confirmation %> <br />
    <%= f.submit %>
  </p>
<% end %>