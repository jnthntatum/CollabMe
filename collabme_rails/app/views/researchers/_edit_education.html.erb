<%= form_tag({:controller => 'educations', :action => 'add_education'}, {:method => 'post', :class => 'form-horizontal'}) do %>
  <div class="control-group">
    <label class="control-label">Type</label>
    <div class="controls">
      <select class="input-medium" id="education_type">
        <option>University</option>
        <option>High School</option>
      </select>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="name">Name</label>
    <div class="controls">
      <%= text_field_tag :name %>
    </div>
  </div>
  <div class="control-group university_controls">
    <label class="control-label" for="degree">Degree</label>
    <div class="controls">
      <%= text_field_tag :degree %>
    </div>
  </div>
  <div class="control-group university_controls">
    <label class="control-label" for="major">Major</label>
    <div class="controls">
      <%= text_field_tag :major %>
    </div>
  </div>
  <div class="control-group university_controls">
    <label class="control-label" for="specialization">Specialization</label>
    <div class="controls">
      <%= text_field_tag :specialization %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Start Date</label>
    <div class="controls">
      <select class="input-medium" id="education_start_date_month">
        <%= render 'shared/select_months' %>
      </select>
      <select class="input-small" id="education_start_date_year">
        <%= render 'shared/select_years' %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">End Date</label>
    <div class="controls">
      <select class="input-medium" id="education_end_date_month">
        <%= render 'shared/select_months' %>
      </select>
      <select class="input-small" id="education_end_date_year">
        <%= render 'shared/select_years' %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= submit_tag 'Add New Education', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>