<div class="span9">
  <div class="row-fluid border_row">
    <div class="span3">
      <div id="profile_picture">
        <%= render :partial => 'show_profile_picture' %>
      </div>
    </div>
    <div class="span9">
      <%= render :partial => 'show_options' %>
    </div>
  </div>
  <div class="row-fluid border_row" id="profile_div">
    <div class="tabbable span12" style="height: 100%;"> <!-- Only required for left/right tabs -->
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#tab1" data-toggle="tab">Experience</a>
        </li>
        <li>
          <a href="#tab2" data-toggle="tab">Education</a>
        </li>
        <li>
          <a href="#tab3" data-toggle="tab">Publications</a>
        </li>
        <li>
          <a href="#tab4" data-toggle="tab">About Me</a>
        </li>
      </ul>
      <div class="tab-content">

        <!-- Work Experiences -->
        <div class="tab-pane active" id="tab1">
          <%= render :partial => 'show_work_experiences' %>  
        </div>

        <!-- Educations -->
        <div class="tab-pane" id="tab2">
          <%= render :partial => 'show_education' %>
        </div>

        <div class="tab-pane" id="tab3">
          <p>
            <% if @researcher.published %>
              <% articles = Article.find_all_by_aid(@researcher.id) %>
              <% articles.each do |article|%>
                <br>
                <% linkname = article.title + " by " + article.authors %>
                <%= link_to linkname, article.full_article_url %>
              <% end%>
            <% else %>
              <%= 'Nothing here yet.' %>
              <br>
              <%= link_to "Add Publications by Verifying Identity", {:controller => "researchers", :action => "publications", :id => @researcher} %>
              <br>
            <% end %>
            <br>
          </p>
        </div>
        <div class="tab-pane" id="tab4">
          <div>
            <p><%= @researcher.about_me %></p>
            
            <h6>Interests</h6>
            <% @researcher.interest_list.each do |interest|%>
              <p><%= interest%></p>
            <% end %>
            
            <h6>Skills</h6>
            <% @researcher.skill_list.each do |skill|%>
            <p><%= skill%></p>
            <% end %>
            
            <div>
              <%= form_tag({:controller => "researchers", :action => "removeInterest"}, :method => "get") do%>
                <%= text_field_tag(:tag) %>
                <%= hidden_field_tag :id, @researcher.id %>
                <%= submit_tag "Remove Interest", :class => "btn btn-success" %>
              <% end %>
            </div>
            <div>
              <%= form_tag({:controller => "researchers", :action => "removeSkill"}, :method => "get") do%>
                <%= text_field_tag(:tag) %>
                <%= hidden_field_tag :id, @researcher.id %>
                <%= submit_tag "Remove Skill",:class => "btn btn-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid border_row" id="post_div">
    <%= render :partial => 'show_posts' %>
  </div>
  <div id="friends"> 
    <%= render :partial => "friend", :collection => @friends %>  
  </div>
</div>
<div class="span3 well sidebar">
  <%= render :partial => "shared/sidebar", :locals => { :user => @researcher} %>
</div>

