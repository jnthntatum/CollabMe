<div class="span9">
  <div class="row-fluid border_row">
    <div class="span3">
      <div id="profile_picture">
        <% if @user.photo %>
          <%= link_to image_tag(@user.photo.file_name, :alt => "Profile Picture"), {:controller => 'researchers', :action => 'edit_profile_picture', :id => params[:id]} %>
        <% else %>
          <%= link_to image_tag("default-profile-pic.png", :alt => "Profile Picture"), {:controller => 'researchers', :action => 'edit_profile_picture', :id => params[:id]} %>
        <% end %>
      </div>
    </div>
    <div class="span9">
      <h1><%= @user.first_name + ' ' + @user.last_name %></h1>
      <% if @currentUserPage %>
        <p><%= @user.email %></p>
        <p><%= link_to "Edit My Info", {:controller => "researchers", :action => "edit"} %></p>
        <p><%= link_to "Check Requests", researcher_requests_path(@user) %></p>
        <p><%= link_to "Create A Project", {:controller => "projects", :action => "new"} %></p>
        <p><%= link_to "Create A Group", {:controller => "groups", :action => "new"} %></p>
      <% else %>
        <p><%= link_to @user.email, {:controller =>"researchers", :action => "email"} %></p>
        <% if session[:current_user_id] and not @hasRequested and not @isCurrUserFriend %>
          <p>
            <%= button_to "Request Connection", researcher_requests_path(@user), :class => "btn btn-primary" %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row-fluid border_row" id="profile_div">
    <div class="tabbable span12" style="height: 100%;"> <!-- Only required for left/right tabs -->
      <ul class="nav nav-tabs" style="margin-bottom: 5px;">
        <li class="active">
          <a href="#tab1" data-toggle="tab">Experience</a>
        </li>
        <li>
          <a href="#tab2" data-toggle="tab">Education</a>
        </li>
        <li>
          <a href="#tab3" data-toggle="tab">Publications</a>
        </li>
        <li>
          <a href="#tab4" data-toggle="tab">About Me</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab1">
          <p>
            <% if @user.work_experiences %>
              <% @user.work_experiences.each do |w| %>
                <div class="experience_header">
                  <h4><%= w.title %></h4>
                  <p><%= w.company + '  |  ' + w.location %></p>
                  <p class="experience_date">
                    <%= w.start_date.getlocal.strftime("%B %Y") + ' - ' + w.end_date.getlocal.strftime("%B %Y") %> 
                  </p>
                </div>
                <% w.activities.each do |a| %> 
                  <p class="activity">
                    <%= '-  ' + a.activity %>
                  </p>
                <% end %>
              <% end %>
            <% else %>
              <%= 'Nothing here yet.' %>
            <% end %>
          </p>
        </div>

        <div class="tab-pane" id="tab2">
          <p>
            <% if @user.educations %>
              <% @user.educations.each do |e| %>
                <div class="experience_header">
                  <h4><%= e.school_name %></h4>
                  <% if e.degree && e.major %>
                    <h5><%= e.degree + ', ' + e.major %></h5>
                  <% end %>
                  <% if e.specialization %>
                    <p><%= 'Specialization in ' + e.specialization %></p>
                  <% end %>
                  <p class="experience_date">
                    <%= e.start_date.getlocal.strftime("%B %Y") + ' - ' + e.end_date.getlocal.strftime("%B %Y") %> 
                  </p>
                </div>
              <% end %>
            <% else %>
              <%= 'Nothing here yet.' %>
            <% end %>
          </p>
        </div>

        <div class="tab-pane" id="tab3">
          <p>
            <% if @user.publications %>
              <%= @user.publications %>
            <% else %>
              <%= 'Nothing here yet.' %>
            <% end %>
          </p>
        </div>
        <div class="tab-pane" id="tab4">
          <div>
            <p><%= @user.about_me %></p>
            
            <h6>Interests</h6>
            <% @user.interest_list.each do |interest|%>
              <p><%= interest%></p>
            <% end %>
            
            <h6>Skills</h6>
            <% @user.skill_list.each do |skill|%>
            <p><%= skill%></p>
            <% end %>
            
            <div>
              <%= form_tag({:controller => "researchers", :action => "removeInterest"}, :method => "get") do%>
                <%= text_field_tag(:tag) %>
                <%= hidden_field_tag :id, @user.id %>
                <%= submit_tag "Remove Interest", :class => "btn btn-success" %>
              <% end %>
            </div>
            <div>
              <%= form_tag({:controller => "researchers", :action => "removeSkill"}, :method => "get") do%>
                <%= text_field_tag(:tag) %>
                <%= hidden_field_tag :id, @user.id %>
                <%= submit_tag "Remove Skill",:class => "btn btn-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid border_row" id="post_div">
    <h4>Posts</h4>
    <% @user.posts.each do |p| %>
      <% creator = Researcher.find_by_id(p.creator_id)%>
      <% creator_full_name = creator.first_name + ' ' + creator.last_name %>
      <div class="row-fluid post_post">
        <div class="span3 post_creator">
          <%= link_to creator_full_name, creator %>
        </div>
        <div class="span9">
          <div class="post_desc">
            <%= p.desc %>
          </div>
          <div class="post_timestamp">
            <%= p.created_at.getlocal.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
        </div>
      </div>    
    <% end %>
    <% if @user.posts.empty? %>
      <div class="row-fluid">
        Nothing here yet.
      </div>
    <% end %>        
    <% if @currentUserPage
         placeholder = 'Update your status...'
       else
         placeholder = 'Write something...'
       end %>
    <div class="row-fluid post_form">
      <%= form_for([@user, Post.new], :html => {}) do |p| %>
        <%= p.text_area(:desc, {:placeholder => placeholder, :class => "span12 input-block-level", :rows => 2}) %>
        <%= p.hidden_field(:creator_id, :value => session[:current_user_id]) %> 
        <br />
        <%= p.submit 'Post', :class => 'btn btn-link btn-small btn-block' %>
      <% end %> 
    </div>
  </div>
  <div id="friends"> 
    <%= render :partial => "friend", :collection => @friends %>  
  </div>
</div>
<div class="span3 well sidebar">
  <%= render :partial => "shared/sidebar", :locals => { :user => @user} %>
</div>

