<div class="span9">
  <div class="row-fluid border_row">
    <div class="span3">
      <div id="profile_picture">
        <%= render :partial => 'show_profile_picture' %>
      </div>
    </div>
    <div class="span9">
      <%= render :partial => 'show_options' %>
    </div>
  </div>
  <div class="row-fluid border_row" id="profile_div">
    <div class="tabbable span12" style="height: 100%;"> <!-- Only required for left/right tabs -->
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#experience_tab" data-toggle="tab">Experience</a>
        </li>
        <li>
          <a href="#education_tab" data-toggle="tab">Education</a>
        </li>
        <li>
          <a href="#publication_tab" data-toggle="tab">Publications</a>
        </li>
        <li>
          <a href="#skill_tab" data-toggle="tab">Skills</a>
        </li>
        <li>
          <a href="#interest_tab" data-toggle="tab">Interests</a>
        </li>
        <li>
          <a href="#about_me_tab" data-toggle="tab">About Me</a>
        </li>
      </ul>

      <div class="tab-content">

        <!-- Work Experiences -->
        <div class="tab-pane active" id="experience_tab">
          <%= render :partial => 'show_work_experiences' %>
        </div>

        <!-- Educations -->
        <div class="tab-pane" id="education_tab">
          <%= render :partial => 'show_education' %>
        </div>

        <!-- Publications -->
        <div class="tab-pane" id="publication_tab">
          <%= render :partial => 'show_publications' %>
        </div>

        <!-- Skills -->
        <div class="tab-pane" id="skill_tab">
          <%= render :partial => 'show_skills' %>
        </div>

        <!-- Interests -->
        <div class="tab-pane" id="interest_tab">
          <%= render :partial => 'show_interests' %>
        </div>

        <!-- About Me -->
        <div class="tab-pane" id="about_me_tab">
          <%= render :partial => 'show_about_me' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid border_row" id="post_div">
    <%= render :partial => 'show_posts' %>
  </div>
  <div id="friends"> 
    <%= render :partial => "friend", :collection => @friends %>  
  </div>
</div>
<div class="span3 well sidebar">
  <%= render :partial => "shared/sidebar", :locals => { :user => @researcher} %>
</div>

