<h1>All Researchers</h1>
<div class="row-fluid">
<% @researchers.each do |researcher| %>
  <div class="row-fluid search_result">
    <div class="span2 search_picture">
      <% @entity = researcher %>
      <%= render :partial => 'shared/show_big_thumbnail' %>
    </div>
    <div class="span6">
      <h3 class="search_title"><%= link_to researcher.first_name + ' ' + researcher.last_name, researcher %></h3>
      <%= render :partial => 'show_member_box' %>
    </div>
    <div class="span4">
      <% if researcher.about_me %>
        <p>
          <% if researcher.about_me.length < 400 %>
            <%= researcher.about_me %>
          <% else %>
            <%= researcher.about_me[0..400] + '...' %>
          <% end %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>
</div>
