<%= form_tag({:controller => 'educations', :action => 'add_education'}, {:method => 'post', :class => 'form-horizontal'}) do %>
  <div class="control-group">
    <label class="control-label">Type</label>
    <div class="controls">
      <select class="input-medium" id="work_experience_type">
        <option>Company</option>
        <option>Research Lab</option>
      </select>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="name">Name</label>
    <div class="controls">
      <%= text_field_tag :name %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="degree">Title</label>
    <div class="controls">
      <%= text_field_tag :title %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Start Date</label>
    <div class="controls">
      <select class="input-medium" id="work_experience_start_date_month">
        <%= render 'shared/select_months' %>
      </select>
      <select class="input-small" id="work_experience_start_date_year">
        <%= render 'shared/select_years' %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">End Date</label>
    <div class="controls">
      <select class="input-medium" id="work_experience_end_date_month">
        <%= render 'shared/select_months' %>
      </select>
      <select class="input-small" id="work_experience_end_date_year">
        <%= render 'shared/select_years' %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= submit_tag 'Add New Education', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>