<h1>Login</h1>
<%= render 'shared/show_errors' %>
<%= form_for :researcher, :method => :post, :url => { :action => 'post_login' } do |f| %>
  <label>Email Address</label>
  <%= f.text_field :email %> <br />
  <label>Password</label>
  <%= f.password_field :password %> <br />
  <%= f.submit 'Login' %>
<% end %> 