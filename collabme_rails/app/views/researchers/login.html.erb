<h1>Login</h1>
<% if flash[:error] %>
  <p class="error"><%= flash[:error] %>
<% end %>
<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %>
<% end %>
<%= form_for :researcher, :method => :post, :url => { :action => 'post_login' } do |f| %>
  <label>Email Address</label>
  <%= f.text_field :email %> <br />
  <label>Password</label>
  <%= f.text_field :password %> <br />
  <%= f.submit 'Login' %>
<% end %> 