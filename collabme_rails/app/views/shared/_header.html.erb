<!--<div class="header banner">-->
<div class="navbar navbar-static-top">
  <div class="navbar-inner">
    <div class="container">
      <!--<div id="logo">-->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      
      <div class="brand" href="#">
        <%= link_to(image_tag("/assets/logo.png", :border => 0, :height => '100', :width => '100'), "/")%>
      </div>
      
      <div class="nav-collapse collapse">
        <%= form_tag("/search/search", :method => "get", :class => 'navbar-form pull-left') do %>
          <%= select_tag(:type, options_for_select([["Researchers", 1], ["Groups", 2], ["Projects", 3]], 1)) %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Submit") %>
        <% end %>
        <!--<div id="user_input_header">-->
        <ul class="btn-group">
          <a class="btn" href="/projects">P</a>
          <a class="btn" href="/groups">G</a>
          <a class="btn" href="/researchers">R</a>
        </ul>
        <% if session[:current_user_id] %>
          <p> 
            Welcome <%= session[:current_user_first_name] %>! 
            <%= link_to 'Logout?', logout_researchers_path %>
          </p>
        <% else %>
          <ul class="btn-group">
            <%= link_to 'New Account?', new_researcher_path, :class => 'btn' %>
            <%= link_to 'Login?', login_researchers_path, :class => 'btn' %>
          </ul>
        <% end %>
      </div>
      <!--</div>-->
    </div>
  </div>
</div>