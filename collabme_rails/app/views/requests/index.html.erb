<h1>List of Requests</h1>

<table>
  <tbody>
    <%if @researcher %>
      <% @researcher.requests.each do |r| %>
        <%= form_tag (researcher_request_path(@researcher, r.id)), :method => :delete, :class => "form-inline" do |f| %>
          <tr>
            <td><%= link_to r.owner.first_name + " " + r.owner.last_name, researcher_path(r.owner) %></td>
            <td><%= select_tag(:request_confirm, options_for_select([['Confirm', 1], ['Deny', 2], ['Ignore', 3]])) %></td>
            <td><%= submit_tag "Submit" %></td>
          </tr>
        <% end %>
      <% end %>
    <% elsif @project %>
      <% @project.requests.each do |r| %>
        <%= form_tag (project_request_path(@project, r.id)), :method => :delete, :class => "form-inline" do |f| %>
          <tr>
            <td><%= link_to r.owner.first_name + " " + r.owner.last_name, researcher_path(r.owner) %></td>
            <td><%= select_tag(:request_confirm, options_for_select([['Confirm', 1], ['Deny', 2], ['Ignore', 3]])) %></td>
            <td><%= submit_tag "Submit" %></td>
          </tr>
        <% end %>
      <% end %>
    <% elsif @group %>
      <% @group.requests.each do |r| %>
        <%= form_tag (group_request_path(@group, r.id)), :method => :delete, :class => "form-inline" do |f| %>
          <tr>
            <td><%= link_to r.owner.first_name + " " + r.owner.last_name, researcher_path(r.owner) %></td>
            <td><%= select_tag(:request_confirm, options_for_select([['Confirm', 1], ['Deny', 2], ['Ignore', 3]])) %></td>
            <td><%= submit_tag "Submit" %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
