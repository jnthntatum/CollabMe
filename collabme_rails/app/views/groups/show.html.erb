<div class="span9">
  <div class="row-fluid border_row">
    <div class="span3"><%= image_tag("default-profile-pic.png", :alt => "rss feeds") %></div>
    <div class="span9">
      <h1><%= @group.name %></h1>
      <div id="friends">
        <p>Researchers: 	
	        <% @group.researchers.each do |member| %> 
	        <%= "#{member.first_name},"%>
	        <% end %>
        </p>
      <% if @currUserInGroup %>
        <table class="table table-hover" style="max-width:300px;">
          <tbody>
            <tr>
              <td>Email: <%= @group.email %></td>
            </tr>
            <tr>
              <td><%= link_to "Edit Group Info", {:controller => "groups", :action => "edit"} %></td>
              <td><%= link_to "Check Requests", group_requests_path(@group) %></td>
            </tr>
          </tbody>
        </table>
      <% elsif session[:current_user_id] and not @hasRequested %>
        <p><%= button_to "Request Connection", group_requests_path(@group), :class => "btn btn-primary" %></p>
      <% end %>
      </div>
      <!--<p><%= link_to "Edit My Info", {:controller => "researchers", :action => "edit"} %></p>-->
    </div>
  </div>
  <div class="row-fluid border_row">
    <div class="tabbable span12" style="height: 100%;"> <!-- Only required for left/right tabs -->
      <ul class="nav nav-tabs">
        <li class="active"><a href="#tab1" data-toggle="tab">Group Description</a></li>
        <li><a href="#tab2" data-toggle="tab">Bulletin Board</a></li>
      </ul>
      <div class="tab-content" style="overflow-y: scroll; height: 80%; z-index: -1;">
        <div class="tab-pane active" id="tab1">
          <p><%= @group.description %></p>
        </div>
        <div class="tab-pane" id="tab2">
          <p>Howdy, I'm in Section 2.</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid border_row">
  </div>
</div>
<div class="span3 well sidebar">
  <%= render :partial => "shared/sidebar", :locals => { :group => @group} %>
</div>