<h1>projects index</h1>

<table>
<tr><th>id</th><th>Name</th><th>Desc</th></tr>
<% @projects.each do |project| %>
	<tr>
	<td><%= project.id%></td>
	<td><%= if project.name != nil then project.name else "nil" end %></td>
	<td><%= if project.description != nil then project.description else "nil" end %></td>
	</tr> 	
<% end %>
</table>
