<div class="span9">
  <div class="row-fluid border_row">
    <div class="span3">
      <div id="profile_picture">
        <%= render :partial => 'show_profile_picture' %>
      </div>
    </div>
    <div class="span9">
      <%= render :partial => 'show_options' %>
    </div>
  </div>
  <div class="row-fluid border_row">
    <div class="tabbable span12" style="height: 100%;"> <!-- Only required for left/right tabs -->
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#tab1" data-toggle="tab">Project Description</a>
        </li>
        <li>
          <a href="#tab2" data-toggle="tab">Tasks</a>
        </li>
        <li>
          <a href="#tab3" data-toggle="tab">Project Stats</a>
        </li>
      </ul>
      <div class="tab-content">

        <!-- Project Description -->
        <div class="tab-pane active" id="tab1">
          <p>Hello, I'm in Section 3.</p>
        </div>

        <!-- Tasks -->
        <div class="tab-pane" id="tab2">
          <%= render :partial => 'show_tasks' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid border_row" id="post_div">
    <%= render :partial => 'show_posts' %>
  </div>
</div>
<div class="span3 well sidebar">
  <%= render :partial => "shared/sidebar", :locals => { :project => @project} %>
</div>


